source 'https://rubygems.org'

gem 'rails', '3.2.13'
ruby '1.9.3'

gem 'jquery-rails'
gem 'private_pub'
gem 'thin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'sqlite3'
  gem 'pry'
end